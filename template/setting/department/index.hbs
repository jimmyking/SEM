<!DOCTYPE html>
<html>
    {{import "module/head"}}
    <body class="skin-blue">
        <!-- header logo: style can be found in header.less -->
        {{import "module/header"}}
        <div class="wrapper row-offcanvas row-offcanvas-left">
            <!-- Left side column. contains the logo and sidebar -->
          
          {{import "module/menu/menu"}}
            <!-- Right side column. Contains the navbar and content of the page -->
          {{import "setting/department/content"}}
        </div><!-- ./wrapper -->



        <!-- COMPOSE MESSAGE MODAL -->
        <div class="modal fade" id="depart-modal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">新增部门 </h4>
                    </div>
                    <form action="#" method="get">
                        <div class="modal-body">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">部门名称:</span>
                                    <input name="name" class="form-control">
                                </div>
                            </div>
                            

                        </div>
                        <div class="modal-footer clearfix">

                            

                            <button type="submit" class="btn btn-primary">提交</button>
                        </div>
                    </form>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->




        <!-- add new calendar event modal -->
        {{import "module/footer_js"}}
        
    </body>
    
   <script type="text/javascript">
     $(function() {
       $(".sidebar-menu > li").removeClass('active');
       $(".sidebar-menu > li").each(
         function(index,element){
           if(index==0){
             //alert(item);
             $(element).addClass('active');
           }
         }
       );
       $(".sidebar .treeview").tree();
       
       
       //部门table操作
       $(".table").on("click","button.show-sub-dept",function(){
         
         var show_btn = $(this);
         var isActive = show_btn.children('i').hasClass('fa-arrow-circle-down');
         if(isActive){
           $.get("sub-dept.html",function(data,status){
               show_btn.parents("tr").first().after(data);
               show_btn.children('i').removeClass('fa-arrow-circle-down').addClass('fa-arrow-circle-up');
           });
         }else{
             show_btn.parents("tr").first().next().remove();
             show_btn.children('i').removeClass('fa-arrow-circle-up').addClass('fa-arrow-circle-down');
         }
         
       });
       
       $(".table").on("click","button.delete-dept",function(){
         $(this).parents("tr").first().remove();
       });
       
      
     });
   </script>
</html>